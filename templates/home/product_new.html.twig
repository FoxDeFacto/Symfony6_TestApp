{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container"> {# Wrap the form in a container to center it #}
    <div class="row justify-content-center"> {# Use Bootstrap to horizontally center the content #}
        <div class="col-md-8"> {# Adjust the column width as needed #}
            <h1>Záznam nového produktu</h1>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_label(form.name, 'Název', {'label_attr': {'class': 'col-form-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.name) }}
                </div>
            </div>

            <div class="form-group">
                {{ form_label(form.productType, 'Typ', {'label_attr': {'class': 'col-form-label col-sm-2'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.productType, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.productType) }}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">Uložit</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
